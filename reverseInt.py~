class Solution(object):
	"""
	:type x: int
	:rtype: int
	"""
    def reverse(self, x):
	"""
	:type x: int
	:rtype: int
	"""
	rev = ""
	rev = str(x)
	rev=rev[::-1]
	if x>= 0 :
	    if int(rev) > 2147483647:
	        return 0
	    return int(rev)
	else:
	    if -1*int(rev[:-1]) < -2147483647:
	        return 0
	    return -1*int(rev[:-1])

	
